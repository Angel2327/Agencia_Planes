@model Agencia_Planes.Models.TransporteEnAvion

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>TransporteEnAvion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
