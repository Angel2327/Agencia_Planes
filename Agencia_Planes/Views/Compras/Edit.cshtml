@model Agencia_Planes.Models.Compra

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FechaCompra" />
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <select asp-for="Cedula" class="form-control" asp-items="ViewBag.Cedula"></select>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoPlan" class="control-label"></label>
                <select asp-for="CodigoPlan" class="form-control" asp-items="ViewBag.CodigoPlan"></select>
                <span asp-validation-for="CodigoPlan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoDeVuelo" class="control-label"></label>
                <select asp-for="CodigoDeVuelo" class="form-control" asp-items="ViewBag.CodigoDeVuelo"></select>
                <span asp-validation-for="CodigoDeVuelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioPagado" class="control-label"></label>
                <input asp-for="PrecioPagado" class="form-control" />
                <span asp-validation-for="PrecioPagado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPersonas" class="control-label"></label>
                <input asp-for="NumeroPersonas" class="form-control" />
                <span asp-validation-for="NumeroPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
